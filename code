.global main

formatstr: .asciz "%ld"
mynumberoutput: .asciz "%ld"
mystring: .asciz "Please enter a number: /n"
    main: 
    movq $0, %rax
    movq $mystring, %rdi
    call printf
    call inout

inout: 
    subq $8, %rsp
    leaq -8(%rbp), %rsi
    movq $formatstr, %rdi
    movq $0, %rax
    call scanf
    incq -8(%rbp)
    movq $0, %rax
    movq $mynumberoutput, %rdi
    movq -8(%rbp), %rsi
    call printf

end:
        mov     $0, %rdi
        call    exit
